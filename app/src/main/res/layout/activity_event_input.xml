<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ola.crimealertadimn.eventInput">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextAlert"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Check Location on map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonloc"
        android:layout_alignParentBottom="true"/>

    <Button
        android:text="Add to database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextDetails"
        android:layout_below="@+id/editTextCity"
        android:layout_alignLeft="@+id/editTextCity"
        android:layout_alignStart="@+id/editTextCity"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextCity"
        android:layout_alignBottom="@+id/textViewCity"
        android:layout_alignLeft="@+id/editTextLat"
        android:layout_alignStart="@+id/editTextLat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/editTextLon"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/editTextAlert"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/editTextLat"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/editTextLon"
        android:layout_alignLeft="@+id/editTextLon"
        android:layout_alignStart="@+id/editTextLon" />

    <TextView
        android:text="Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextAlert"
        android:layout_alignLeft="@+id/buttonloc"
        android:layout_alignStart="@+id/buttonloc"
        android:id="@+id/textViewAlert" />

    <TextView
        android:text="Longtitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLon"
        android:layout_alignBottom="@+id/editTextLon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLat"
        android:layout_alignTop="@+id/editTextLat"
        android:layout_alignBottom="@+id/editTextLat"
        android:layout_alignRight="@+id/textViewLon"
        android:layout_alignEnd="@+id/textViewLon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCity"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDetail"
        android:layout_alignBaseline="@+id/editTextDetails"
        android:layout_alignBottom="@+id/editTextDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
